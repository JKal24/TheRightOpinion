{
  "name": "The Right Opinion",
  "description": "Youtube video analytics tool",
  "manifest_version": 2,
  "version": "1.0.0",
  "icons": {
    "16": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "logo.png",
      "48": "logo.png"
    },
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "permissions": ["tabs"]
}